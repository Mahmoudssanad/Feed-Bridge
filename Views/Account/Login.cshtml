@using FeedBridge_00.ViewModels

@model LoginUserVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Google fonts icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Font Awesome icons -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <title>FeedBridge</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <header class="header">
        <div class="header-logo">
            <img src="/imgs/logo.png" alt="logo" class="logo-img" />
            <p>FeedBridge</p>
        </div>
        <ul class="page-items">
            <li><a href="/Home/index">الرئيسيه</a></li>
            <li><a href="/product/AllProducts">المنتجات</a></li>
            <li><a href="/Donation/Index">تبرع</a></li>
            <li><a href="/home/index">عن الموقع</a></li>
        </ul>
        <span class="material-symbols-outlined mobile-icon"> menu </span>
        <div class="header-icons">
            <a href="/Cart/Show">
                <span class="material-symbols-outlined"> shopping_cart </span>
            </a>
            <span class="material-symbols-outlined"> account_circle </span>
            <a href="/Account/Register">انشاء حساب</a>
        </div>
    </header>
    <div class="container">
        <div class="login">
            <img src="/imgs/image.png" alt="user-icon" class="login-img" />
            <h1 class="login-header">تسجيل الدخول</h1>
            <form class="login-form" id="login-form" asp-action="SaveLogin" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-control">
                    <label asp-for="Email">الايميل</label>
                    <input asp-for="Email" type="email" id="email" />
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <i class="fa-solid fa-circle-check"></i>
                    <small><span asp-validation-for="Email" class="text-danger"></span></small>
                </div>

                <div class="form-control">
                    <label asp-for="Password">كلمه المرور</label>
                    <input asp-for="Password" type="password" id="password" />
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <i class="fa-solid fa-circle-check"></i>
                    <small><span asp-validation-for="Password" class="text-danger"></span></small>
                </div>

                <input type="submit" value="ارسال" class="btn btn-primary" />
                <a href="/Account/Register">انشاء حساب؟</a>
            </form>
        </div>
    </div>
     @* <script src="/js/script.js"></script> *@
</body>
</html>

